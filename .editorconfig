root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,ini,json,sh}]
indent_style = space
indent_size = 4

[*.{html,css,scss,js}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[makefile-local]
indent_style = tab

[*.bat]
end_of_line = crlf
indent_style = space
indent_size = 2
charset = latin1
